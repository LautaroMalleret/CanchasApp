<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titulo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"></TextView>

            <TextView
                android:id="@+id/adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="direccion"></TextView>

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ciudad"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|center_vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/label_canchas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="canchas"
                android:layout_marginBottom="4dp"></TextView>
            <TextView
                android:id="@+id/NumeroCanchas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="numeros"></TextView>
        </LinearLayout>

<!--        <ImageButton-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:src="@drawable/ic_icon_map"-->
<!--            android:backgroundTint="@color/white">-->

<!--        </ImageButton>-->

    </LinearLayout>

</androidx.cardview.widget.CardView>